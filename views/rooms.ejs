<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rooms</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-4">
  <h2>All Rooms</h2>
  <a href="/rooms/add" class="btn btn-success mb-3">Add Room</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Room ID</th>
        <th>Room Name</th>
        <th>Capacity</th>
        <th>Location ID</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (rooms.length > 0) { %>
        <% rooms.forEach(room => { %>
          <tr>
            <td><%= room.roomID %></td>
            <td><%= room.roomName %></td>
            <td><%= room.capacity %></td>
            <td><%= room.locationID %></td>
            <td>
              <a href="/rooms/update/<%= room.roomID %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/rooms/delete/<%= room.roomID %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="5" class="text-center">No rooms available</td></tr>
      <% } %>
    </tbody>
  </table>
  <a href="/admin" class="btn btn-secondary">Back to Admin</a>
</div>
</body>
</html>