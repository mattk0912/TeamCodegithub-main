<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Location Management</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Location App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addLocation">Add New Location</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <form class="row g-3 mb-4" method="GET" action="/">
      <div class="col-auto">
        <input
          type="text"
          class="form-control"
          name="keyword"
          placeholder="Search by name or address"
          value="<%= typeof keyword !== 'undefined' ? keyword : '' %>"
        />
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Search</button>
      </div>
    </form>
    <br>
    <div class="text-center"><h2>Locations from the Database</h2></div>
    <br>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% for (let i = 0; i < locations.length; i++) { %>
    <div class="col">
      <div class="card h-100">
        <img src="/images/<%= locations[i].image %>" class="card-img-top" alt="<%= locations[i].location_name %>">
        <div class="card-body">
          <h5 class="card-title">
            <a href="/location/<%= locations[i].location_id %>"><%= locations[i].location_name %></a>
          </h5>
          <p class="card-text">
            <strong>Address:</strong> <%= locations[i].address %><br>
            <strong>Unit:</strong> <%= locations[i].unit %><br>
            <strong>Postal Code:</strong> <%= locations[i].postal_code %><br>
            <strong>Country:</strong> <%= locations[i].country %><br>
            <strong>Capacity:</strong> <%= locations[i].capacity %>
          </p>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <a href="/editLocation/<%= locations[i].location_id %>" class="btn btn-sm btn-primary">Edit</a>
          <a href="/deleteLocation/<%= locations[i].location_id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this location?')">Delete</a>
        </div>
        <td>
            <% if (user && user.role === 'admin') { %>
              <a href="/editLocation/<%= locations[i].location_id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/deleteLocation/<%= locations[i].location_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this location?')">Delete</a>
            <% } 
            %>
        </td>
      </div>
    </div>
  <% } %>
</div>


